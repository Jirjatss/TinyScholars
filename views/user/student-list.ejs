<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body class="bg-white text-black h-screen">
    <%- include('../partials/navbar', {userRole, userId, userImage}) %>
    <div class="mx-24 bg-white">
      <h1 class="text-4xl font-mono text-center font-semibold py-10">Students List</h1>
      <div class="overflow-x-auto mx-44">
        <table class="table">
          <thead>
            <tr>
              <th>No.</th>
              <th>Foto</th>
              <th>Nama Lengkap</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><img src="<%= student.UserProfile.imageUrl %>" alt="<%= student.UserProfile.fullName %>" style="width: 50px; height: 50px" /></td>
              <td><%= student.UserProfile.fullName %></td>
              <td><a href="/student-list/<%= student.id %>" class="px-4 py-1 bg-blue-600 text-white border rounded">Lihat Detail</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
